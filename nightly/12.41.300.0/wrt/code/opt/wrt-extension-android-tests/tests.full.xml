<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk WRT" name="wrt-extension-android-tests">
    <set name="extension" type="script">
      <testcase component="Crosswalk WRT/Extension System" execution_type="auto" id="Crosswalk_EmbeddedMode_Extension_Install" priority="P1" purpose="Validate if Crosswalk support the external extension install in the embedded mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/opt/wrt-extension-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Install.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Extension System" execution_type="auto" id="Crosswalk_EmbeddedMode_Extension_Launch_viaTerminal" priority="P2" purpose="Validate if Crosswalk support the external extension launch in the embedded mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/opt/wrt-extension-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Launch_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Extension System" execution_type="auto" id="Crosswalk_EmbeddedMode_Extension_Uninstall_viaTerminal" priority="P1" purpose="Validate if Crosswalk support the external extension uninstall in the embedded mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/opt/wrt-extension-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Uninstall_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Extension System" execution_type="auto" id="Crosswalk_EmbeddedMode_Extension_Close_viaTerminal" priority="P2" purpose="Validate if Crosswalk support the external extension close in the embedded mode" status="approved" type="Functional">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/opt/wrt-extension-android-tests/extension/Crosswalk_EmbeddedMode_Extension_Close_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Extension System" execution_type="auto" id="Crosswalk_EmbeddedMode_Extension_XwalkRuntimeLibUninstall_viaTerminal" priority="P1" purpose="Validate if Crosswalk support the external extension in the embedded mode with runtimelib uninstall" status="approved" type="Functional">
        <description>
          <pre_condition>
            Make sure Crosswalk binary is download to local
          </pre_condition>
          <test_script_entry>/opt/wrt-extension-android-tests/extension/Crosswalk_EmbeddedMode_Extension_XwalkRuntimeLibUninstall_viaTerminal.sh</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
